    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.9",
    "@types/pg": "^8.10.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
